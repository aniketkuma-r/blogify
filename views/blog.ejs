<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title><%= blog.title %></title>
  </head>
  <body data-bs-theme="dark">
    <!-- navbar -->
    <%- include('./partials/navbar') %>
    <div class="container my-4">
      <h1 class="text-center"><%= blog.title %></h1>
      <% if (blog.coverImageUrl) { %>
      <div class="text-center mt-3">
        <img
          src="<%= blog.coverImageUrl %>"
          alt="<%= blog._id %>"
          width="500rem"
        />
      </div>
      <% } %>
      <h3 class="mt-3"><%= blog.description %></h3>
      <div class="content"><%- blog.body %></div>
      <p>
        Author:
        <img
          src="<%= blog.createdBy?.profileImageUrl %>"
          alt="<%= blog.createdBy?.fullName %>"
          width="40px"
          style="mix-blend-mode: multiply"
        />
        <span class="text-primary"><%= blog.createdBy?.fullName %></span>
      </p>
      <p>Created At: <span class="text-primary"><%= blog.createdAt %></span></p>      
    </div>
    <%- include('./partials/comment') %>
    <%- include('./partials/script') %>
  </body>
</html>
