<div class="container">
  <h3 class="mt-3">Comments (<%= comments.length %>)</h3>
  <% if (locals.user) { %>
  <div class="container m-3">
    <form action="/blog/comment/<%- blog._id %>" method="POST">
      <div class="form d-flex gap-3">
        <textarea
          class="form-control"
          placeholder="Leave a comment here..."
          id="content"
          name="content"
          required
        ></textarea>
        <button
          type="submit"
          class="btn btn-sm btn-primary"
          style="height: 40px"
        >
          Submit
        </button>
      </div>
    </form>
  </div>
  <% } %>
  <hr />
  <div class="container m-3">
    <ul>
      <% comments.forEach(comment => { %>
      <li class="d-flex align-items-center gap-3">
        <img
          src="<%= comment.createdBy.profileImageUrl %>"
          alt="<%= comment.createdBy.fullName %>"
          width="40px"
          style="mix-blend-mode: multiply"
        />
        <div>
          <p class="text-primary m-0">@<%= comment.createdBy.fullName %></p>
          <p style="font-size: larger"><%= comment.content %></p>
        </div>
        
      </li>
      <% }) %>
    </ul>
  </div>
</div>
